<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_navigation"
    app:startDestination="@id/overview">

    <fragment
        android:id="@+id/overview"
        android:name="com.example.trendingmovies.ui.overview.OverviewFragment"
        android:label="OverViewFragment">
        <action
            android:id="@+id/action_from_overview_to_details"
            app:destination="@id/details"
             />
    </fragment>


    <fragment
        android:id="@+id/details"
        android:name="com.example.trendingmovies.ui.detail.DetailFragment"
        android:label="DetailsFragment">
    </fragment>

</navigation>